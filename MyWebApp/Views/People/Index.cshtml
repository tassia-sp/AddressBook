
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 style="padding-top:30px; text-align:center">Contacts</h2>
<div class="container-fluid" style="padding-top:20px">
    <div ng-controller="peopleController as peopleCtrl">
        <table class="table table-striped table-hover table-borderedr">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>First Name</td>
                    <td>Last Name</td>
                    <td>Email</td>
                    <td>Favorite</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in peopleCtrl.items">
                    <td>{{item.id}}</td>
                    <td>{{item.firstName}}</td>
                    <td>{{item.lastName}}</td>
                    <td>{{item.email}}</td>
                    <td>{{item.favorite}}</td>
                    <td>
                        <button type="button" class="btn btn-primary" ng-click="peopleCtrl.edit(item)">Edit</button>
                        <button type="button" class="btn btn-danger" ng-click="peopleCtrl.delete(item)">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    <script>
        (function () {
            angular.module("myWebApp")
                .factory('$peopleService', PeopleService)

            PeopleService.$inject = ['$http'];

            function PeopleService($http) {
                return {
                    getPeople: _getPeople
                };


                function _getPeople() {
                    console.log("getting people...");
                    return $http.get('/api/people')
                        .then(onSuccessGetPeople)
                        .catch(onError);
                }
                function onSuccessGetPeople(response) {
                    console.log("successfully receieved data");
                    return response.data;
                }
                function onError() {
                    console.log("Sucks");
                }
            }
        })();
    </script>

    <script type="text/javascript">
        (function () {
            angular.module('myWebApp')
                .controller("peopleController", PeopleController)
            PeopleController.$inject = ['$scope', '$peopleService'];

            function PeopleController($scope, $peopleService) {
                var vm = this;
                vm.$scope = $scope;
                vm.$peopleService = $peopleService;

                vm.items = null;
                vm.getPeople = _getPeople;


                render();

                function render() {
                    console.log("rendering...")
                    return vm.getPeople()
                        .then(onCompleteGetPeople);
                }

                function _getPeople() {
                    return $peopleService.getPeople()
                        .then(fillAddressTable);
                }
                function fillAddressTable(data) {
                    console.log("In fillAddressTable success. data:", data);
                    vm.items = data;

                }
                function onCompleteGetPeople() {
                    console.log("on complete get people");
                }

            }
        })();
    </script>
}